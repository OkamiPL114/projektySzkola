<body>
    <h1><%= pageTitle %></h1>
    <h2></h2>
    <form action="/signup" method="post">
        <input type="text" name="firstName" placeholder="Twoje imię" required> <br> <br>
        <input type="text" name="lastName" placeholder="Twoje nazwisko" required> <br> <br>
        <input type="email" name="email" placeholder="Twój email" required> <br> <br>
        <input type="password" name="password" placeholder="Twoje hasło" required> <br> <br>
        <input type="password" name="repeatPassword" placeholder="Powtórz hasło" required> <br> <br>
        <button type="submit">Utwórz konto</button>
    </form>
    <% if(msg) {%>
        <p class="error"><%= msg %></p>
    <% } %>
    <br> <br>
    <a href="/">Powrót na stronę logowania</a>
