<Window x:Class="ciagLiczb.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ciagLiczb"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Podaj ciąg liczb do opisania (liczby oddziel przecinkami) :"/>
            <TextBox Margin="10" x:Name="tabTextBox" Height="25" FontSize="18"/>
            <Button Content="Opisz" Margin="10" Padding="0, 10" x:Name="execButton" Click="execButton_Click"/>
            <TextBlock Text="" TextWrapping="WrapWithOverflow" x:Name="resultTextBlock" MaxWidth="305"/>
        </StackPanel>
    </Grid>
</Window>
