<Window x:Class="recurFunc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:recurFunc"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="10">
                <Label Content="Podaj A:"/>
                <TextBox x:Name="aInput" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <Label Content="Podaj B: "/>
                <TextBox x:Name="bInput" Width="200"/>
            </StackPanel>
            <Button VerticalAlignment="Center" Content="Wypisz" HorizontalAlignment="Center" Padding="10" Click="Button_Click"/>
            <ListBox x:Name="resultListBox"></ListBox>
        </StackPanel>
    </Grid>
</Window>
