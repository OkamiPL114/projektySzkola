<Window x:Class="ciagArytm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ciagArytm"
        mc:Ignorable="d"
        Title="Ciąg arytmetyczny" Height="300" Width=" 400">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <StackPanel>
                    <Label Content="Podaj wyraz początkowy: "/>
                    <Label Content="Podaj różnicę między wyrazami: "/>
                    <Label Content="Podaj ilość elementów do wyświetlenia: "/>
                </StackPanel>
                <StackPanel>
                    <TextBox Width="100" Margin="0, 4, 0, 0" x:Name="starterTextBox"/>
                    <TextBox Width="100" Margin="0, 7, 0, 0" x:Name="differenceTextBox"/>
                    <TextBox Width="100" Margin="0, 10, 0, 0" x:Name="countTextBox"/>
                </StackPanel>
            </StackPanel>
            <Button Content="Generuj" Width="200" x:Name="generateButton" Click="generateButton_Click"/>
            <Label Margin="0, 20, 0, 0" x:Name="resultLabel"/>
        </StackPanel>
    </Grid>
</Window>
