<Window x:Class="gra999.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gra999"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Gra 999" FontWeight="Bold" FontSize="40" HorizontalAlignment="Center"/>
            <Label Content="Dostępne środki: 100 zł" x:Name="fundsLabel" HorizontalAlignment="Center" FontSize="25"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="Obstawiana kwota: " FontSize="25"/>
                <TextBox Width="75" FontSize="25" x:Name="betTextBox"/>
            </StackPanel>
            <Button Content="Start" FontSize="20" Margin="20" Padding="10" Width="200" x:Name="startButton" Click="startButton_Click"/>
            <Button Content="Zakończ" FontSize="15" Margin="5" Padding="5" Width="100" x:Name="endButton" Click="endButton_Click"/>
            <TextBlock Text="Poprzednie wyniki: " FontSize="20" Margin="10" Visibility="Hidden" x:Name="resultsTextBox" TextWrapping="WrapWithOverflow"/>
        </StackPanel>
    </Grid>
</Window>
