<Window x:Class="palindromAnagram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:palindromAnagram"
        mc:Ignorable="d"
        Title="Czy palindrom/anagram?" Height="200" Width="350">
    <Grid>
        <StackPanel Margin="30">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel HorizontalAlignment="Center">
                    <Label Content="Pierwsze słowo:"/>
                    <Label Content="Drugie słowo:"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Center">
                    <TextBox Width="100" x:Name="firstTextBox" Margin="3"/>
                    <TextBox Width="100" x:Name="secondTextBox" Margin="3"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Czy palindrom?" x:Name="palindromButton" Click="palindromButton_Click" Margin="0 20 0 0" Padding="5"/>
                <Button Content="Czy anagram?" x:Name="anagramButton" Click="anagramButton_Click" Margin="70 20 0 0" Padding="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
