<Window x:Class="decIntoBin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:decIntoBin"
        mc:Ignorable="d"
        Title="Konwersja dziesiętna na binarną" Height="600" Width="600">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label Content="Podaj liczbę dziesiętną: "/>
                <TextBox Height="20" Width="80" x:Name="decimalTextBox" VerticalAlignment="Top" Margin="0 4 0 0"/>
            </StackPanel>
            <Button Content="Zamień na liczbę binarną" Margin="10" Padding="5" Click="Button_Click"/>
            <ListBox x:Name="binaryListBox">
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
