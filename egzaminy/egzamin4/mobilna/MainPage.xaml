<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobilna.MainPage">

    <StackLayout Margin="10">
        <Frame BackgroundColor="#EF7777">
            <StackLayout>
                <Label Text="Panel Administratora" FontSize="20" HorizontalOptions="Center"/>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Login" VerticalOptions="Center"/>
                    <Entry Text="" HorizontalOptions="FillAndExpand" x:Name="loginEntry"/>
                </StackLayout>
                
                <StackLayout Orientation="Horizontal">
                    <Label Text="Hasło" VerticalOptions="Center"/>
                    <Entry Text="" HorizontalOptions="FillAndExpand" x:Name="passwordEntry"/>
                </StackLayout>
                
                <Label Text="Zaloguj jako: "/>
                <StackLayout>
                    <RadioButton Content="Administrator" x:Name="adminRadioButton"/>
                    <RadioButton Content="Użytkownik" x:Name="userRadioButton"/>
                </StackLayout>
                
                <Button Text="Zaloguj" x:Name="loginButton" Clicked="loginButton_Clicked"/>
            </StackLayout>
        </Frame>
    </StackLayout>

</ContentPage>
