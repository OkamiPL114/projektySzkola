<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eJournal.GradesPage">
    <ListView x:Name="gradesListView"
              HasUnevenRows="True">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout>
                        <Label x:Name="subjectLabel"
                               Text="{Binding Name}"
                               FontSize="20"
                               TextColor="Black"/>
                        <Label x:Name="gradesLabel"
                               Text="{Binding Grades}"/>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>