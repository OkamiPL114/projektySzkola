<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eJournal.LoginPage"
             NavigationPage.HasNavigationBar="False">
    <StackLayout Margin="20" VerticalOptions="Center">
        <Label Text="E-dziennik"
               FontSize="30"
               TextColor="Black"
               Margin="0, 0, 0, 50"
               HorizontalOptions="Center"/>
        <Entry Keyboard="Email"
               Placeholder="email"
               x:Name="emailEntry"/>
        <Entry IsPassword="True"
               Placeholder="hasło"
               x:Name="passwordEntry"/>
        <Button Text="Zaloguj"
                Margin="10"
                x:Name="loginButton"
                Clicked="loginButton_ClickedAsync"/>
        <Button Text="Utwórz konto"
                Margin="10"
                x:Name="creatteAccButton"
                Clicked="creatteAccButton_ClickedAsync"/>
    </StackLayout>
</ContentPage>