<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PopupApp.MainPage">

    <StackLayout Margin="10, 20">
        <Frame BackgroundColor="Pink">
            <Label Text="Przegląd okienek typu Popup"
                   FontSize="20"/>
        </Frame>
        <Button Text="Informacja o programie"
                x:Name="infoButton"
                Clicked="infoButton_Clicked"/>
        <Button Text="Czy lubisz programowanie?"
                x:Name="likeCodingButton"
                Clicked="likeCodingButton_Clicked"/>
        <Label Text=""
               x:Name="codingLabel"/>
        <Button Text="Ulubiony język"
                x:Name="favLangButton"
                Clicked="favLangButton_Clicked"/>
        <Label Text="Ulubiony język: "
               x:Name="favLangLabel"/>
        <Button Text="Szkodliwy fastfood - ankieta"
                x:Name="fastfoodButton"
                Clicked="fastfoodButton_Clicked"/>
        <Label Text="Szkodiwy fastfood według ciebie: "
               x:Name="fastfoodLabel"/>
    </StackLayout>

</ContentPage>
