<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DBApp.EditContactPage">
    <StackLayout VerticalOptions="Center" Margin="20, 0">
        <Label Text="Email"/>
        <Entry x:Name="emailEntry" Keyboard="Email"/>
        <Label Text="Imię i nazwisko"/>
        <Entry x:Name="nameEntry" Keyboard="Text"/>
        <Button Text="Potwierdź edycję" x:Name="editButton" Clicked="editButton_Clicked"/>
    </StackLayout>
</ContentPage>