<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pagesApp.MainPage"
             NavigationPage.HasNavigationBar="False">

    <StackLayout HorizontalOptions="Center"
                 VerticalOptions="Center">
        <Label Text="Strona główna"/>
        <Button Text="Informacje o programie"
                x:Name="aboutButton"
                Clicked="aboutButton_Clicked"/>
        <Entry x:Name="ageEntry" />
        <Button x:Name="showBirthYearButton"
                Text="Oblicz rok urodzenia"
                Clicked="showBirthYearButton_Clicked"/>
    </StackLayout>

</ContentPage>
